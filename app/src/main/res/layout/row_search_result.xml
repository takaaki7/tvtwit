<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height_l"
    android:layout_marginBottom="@dimen/spacing_xs"
    android:layout_marginTop="@dimen/spacing_xs"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="@dimen/card_corner_elevation"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:paddingBottom="@dimen/spacing_xs"
        android:paddingLeft="@dimen/spacing_s"
        android:paddingRight="@dimen/spacing_s"
        android:paddingTop="@dimen/spacing_xs">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/line_spacing_m"
            android:lines="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            tools:text="title" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/rankTitleText"
            android:gravity="bottom">

            <TextView
                android:id="@+id/dateText"
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:textColor="@color/grey_600"
                tools:text="date" />

            <TextView
                android:id="@+id/entryCountText"
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:gravity="bottom"
                android:textColor="@color/grey_600"
                tools:text="100" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@id/entryCountText"
                android:paddingEnd="@dimen/spacing_xs"
                android:src="@drawable/ic_messenger" />
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>